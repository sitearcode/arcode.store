function tinkoffAdd() { 
	var tinkoffOrder = (Math.round(+new Date()/1000)).toString();
	$('#buy-in-credit-data input[name=\'marketing_id\']').val(tinkoffOrder);

	var requestData = {
		sum: {{item_price}},

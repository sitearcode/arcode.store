{{ header }} {% set col = column_left ? 9 : 12 %} {% set col = column_right ? col - 3 : col %}
<!-- Main :: Start-->
<main class="main">
	<!-- Breadcrumbs :: Start-->
	<div class="breadcrumbs">
	  <div class="container-fluid">
		<h1 class="breadcrumbs__title">{{ heading_title }}</h1>
		<ul class="breadcrumbs__menu">
		{% for i,breadcrumb in breadcrumbs %}
			{% if (i + 1 < breadcrumbs|length) %} 
			<li><a class="breadcrumbs__link" href="{{ breadcrumb.href }}"><span>{{ breadcrumb.text }}</span></a></li>
			{% else %} 
			<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
		</ul>
	  </div>
	</div>
	<!-- Breadcrumbs :: End-->
	<!-- Page :: Start-->
	<div class="page">
	{{ content_top }}
	<div class="container-fluid">
		<div class="row personal__wrapper">
		{{ column_left|replace({'<div id="column-left" class="col-xl-3">': '<div id="column-left" class="col-xl-3 personal__sidebar">'}) }}
		<div class="col-xl-{{ col }}">
			<div class="auth__body">
				<div class="auth__form">
					<form action="{{ action }}" method="post" enctype="multipart/form-data">
						<fieldset id="account" class="ui-fieldset">
							<legend class="ui-legend">{{ text_your_details }}</legend>
							<div class="form-group{% if customer_groups|length <= 1 %} hide{% endif %}">
								<label class="ui-label required">{{ entry_customer_group }}</label>
								<div class="row{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
								{% for customer_group in customer_groups %}
									{% if customer_group.customer_group_id == customer_group_id %}
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="customer_group_id" type="radio" value="{{ customer_group.customer_group_id }}" checked="checked">
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ customer_group.name }}</span>
										</label>
									</div>
									{% else %}
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="customer_group_id" type="radio" value="{{ customer_group.customer_group_id }}">
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ customer_group.name }}</span>
										</label>
									</div>
									{% endif %} 
								{% endfor %} 
								</div>
							</div>

						{% for fieldName in allCustomFields %} 
							{% set fieldNameT = "entry_" ~ fieldName  ~ '_show' %}
							{% set fieldNameR = "entry_" ~ fieldName  ~ '_required' %}
							{% set fieldNameN = "entry_" ~ fieldName  %}
							{% set fieldNameE = "error_" ~ fieldName  %}
							{% set fieldNameV = fieldName  %}
							<div class="form-group{{ not attribute(_context, fieldNameT) ? ' hide' : '' }}">
								<label class="ui-label{{ attribute(_context, fieldNameR)  ? ' required' : ''  }}">{{ attribute(_context, fieldNameN) }}</label>
								<div class="ui-field{% if attribute(_context, fieldNameE) %} is-error{% endif %}">
									{% if (fieldName == 'country') %} 
										<select name="country_id" id="input-country">
											<option value="">{{ text_select }}</option>
											{% for country in countries %} 
											{% if (country['country_id'] == country_id) %} 
											<option value="{{ country['country_id'] }}" selected="selected">{{ country['name'] }}</option>
											{% else %} 
											<option value="{{ country['country_id'] }}">{{ country['name'] }}</option>
											{% endif %} 
											{% endfor %} 
										</select>
									{% elseif (fieldName == 'zone') %}
											<select name="zone_id" id="input-zone"></select>
									{% else %}
										<input class="ui-input" type="text" name="{{ fieldName }}" value="{{ attribute(_context, fieldNameV) }}" placeholder="{{ attribute(_context, fieldNameN) }}" id="input-{{ (fieldName)|replace({'_': '-'}) }}">
									{% endif %}
									{% if attribute(_context, fieldNameE) %} 
										<span class="error ui-error">{{ attribute(_context, fieldNameE) }}</span>
									{% endif %}	
								</div>
							</div>	
						{% endfor %} 

							{% for custom_field in custom_fields %} 
							{% if (custom_field['type'] == 'select') %} 
							<div class="form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<select name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" id="input-custom-field{{ custom_field['custom_field_id'] }}">
										<option value="">{{ text_select }}</option>
										{% for custom_field_value in custom_field['custom_field_value'] %} 
										{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
										<option value="{{ custom_field_value['custom_field_value_id'] }}" selected="selected">{{ custom_field_value['name'] }}</option>
										{% else %} 
										<option value="{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</option>
										{% endif %} 
										{% endfor %}
									</select>
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
										<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'radio') %} 
							<div class="form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-group{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
								{% for custom_field_value in custom_field['custom_field_value'] %} 
									{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" type="radio" value="{{ custom_field_value['custom_field_value_id'] }}" checked="checked">
										<span class="ui-check__radio"></span>
										<span class="ui-check__text">{{ custom_field_value['name'] }}</span>
									</label>
									{% else %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" type="radio" value="{{ custom_field_value['custom_field_value_id'] }}">
										<span class="ui-check__radio"></span>
										<span class="ui-check__text">{{ custom_field_value['name'] }}</span>
									</label>
									{% endif %} 
								{% endfor %} 
								{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
								<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
								{% endif %}	
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'checkbox') %} 
							<div class="form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-group{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
								{% for custom_field_value in custom_field['custom_field_value'] %} 
									{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}][]" type="checkbox" value="{{ custom_field_value['custom_field_value_id'] }}" checked="checked">
										<span class="ui-check__checkbox"></span>
										<span class="ui-check__text">{{ custom_field_value['name'] }}</span>
									</label>
									{% else %} 
									<label class="ui-check">
										<input class="ui-check__input" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}][]" type="checkbox" value="{{ custom_field_value['custom_field_value_id'] }}">
										<span class="ui-check__checkbox"></span>
										<span class="ui-check__text">{{ custom_field_value['name'] }}</span>
									</label>
									{% endif %} 
								{% endfor %} 
								{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
								<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
								{% endif %}
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'text') %} 
							<div class="form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<input class="ui-input" type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" placeholder="{{ custom_field['name'] }}" id="input-custom-field{{ custom_field['custom_field_id'] }}">
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
									<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'textarea') %} 
							<div class="form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<textarea class="ui-textarea" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" placeholder="{{ custom_field['name'] }}" id="input-custom-field{{ custom_field['custom_field_id'] }}" class=" {{ error_custom_field[custom_field['custom_field_id']] is defined ? 'error' : ''}}">{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}</textarea>
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
									<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'file') %} 
							<div class="form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<button type="button" id="button-custom-field{{ custom_field['custom_field_id'] }}" data-loading-text="{{ text_loading }}" class="ui-btn ui-btn--36 ui-btn--grey ui-btn--file">{{ button_upload }}</button>
									<input type="hidden" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : '' }}">
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
									<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'date') %} 
							<div class="form-group custom-field " data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<input class="ui-input date" type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="{{ date_format }}" placeholder="{{ custom_field['name'] }}" id="input-custom-field{{ custom_field['custom_field_id'] }}" data-toggle="datetimepicker" data-target=".date">
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
									<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'time') %} 
							<div class="form-group custom-field " data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<input class="ui-input time" type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="{{ time_format }}" placeholder="{{ custom_field['name'] }}" id="input-custom-field{{ custom_field['custom_field_id'] }}" data-toggle="datetimepicker" data-target=".time">
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
									<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% if (custom_field['type'] == 'datetime') %} 
							<div class="form-group custom-field " data-sort="{{ custom_field['sort_order'] }}">
								<label class="ui-label{{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</label>
								<div class="ui-field{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} is-error{% endif %}">
									<input class="ui-input datetime" type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="{{ datetime_format }}" placeholder="{{ custom_field['name'] }}" id="input-custom-field{{ custom_field['custom_field_id'] }}" data-toggle="datetimepicker" data-target=".datetime">
									{% if (error_custom_field[custom_field['custom_field_id']] is defined) %} 
									<span class="error ui-error">{{ error_custom_field[custom_field['custom_field_id']] }}</span>
									{% endif %} 
								</div>
							</div>
							{% endif %} 
							{% endfor %}

							<div class="form-group">
								<label class="ui-label">{{ entry_default }}</label>
								<div class="row">
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="default" id="default1" type="radio" value="1" {{ default == 1 ? 'checked="checked"' : ''}}>
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ text_yes }}</span>
										</label>
									</div>
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="default" id="default0" type="radio" value="0" {{ default == 0 ? 'checked="checked"' : ''}}>
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ text_no }}</span>
										</label>
									</div>
								</div>
							</div>
						</fieldset>
						<fieldset class="ui-fieldset">
							<div class="row">
								<div class="col-auto">
								   <a href="{{ back }}" class="ui-btn ui-btn--grey">{{ button_back }}</a>
								</div>
								<div class="col-auto">
									<button type="submit" class="ui-btn ui-btn--primary">{{ button_continue }}</button>	
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
		{{ column_right }}
		</div>
	</div>
	{{ content_bottom }}
	</div>
	<!-- Page :: End-->
</main>
<!-- Main :: End-->
{{ footer }}
<script>
// Sort the custom fields
$('.form-group[data-sort]').detach().each(function() {
	if ($(this).attr('data-sort') >= 0 && $(this).attr('data-sort') <= $('.form-group').length-2) {
		$('.form-group').eq(parseInt($(this).attr('data-sort'))+2).before(this);
	}
	
	if ($(this).attr('data-sort') > $('.form-group').length-2) {
		$('.form-group:last').after(this);
	}
	
	if ($(this).attr('data-sort') == $('.form-group').length-2) {
		$('.form-group:last').after(this);
	}
	
	if ($(this).attr('data-sort') < -$('.form-group').length-2) {
		$('.form-group:first').before(this);
	}
});

$('button[id^=\'button-custom-field\']').on('click', function() {
	var element = this;
	
	$('#form-upload').remove();
	
	$('body').prepend('<form enctype="multipart/form-data" id="form-upload" style="display: none;"><input type="file" name="file"></form>');
	
	$('#form-upload input[name=\'file\']').trigger('click');
	
	if (typeof timer != 'undefined') {
		clearInterval(timer);
	}
	
	timer = setInterval(function() {
		if ($('#form-upload input[name=\'file\']').val() != '') {
			clearInterval(timer);
		
			$.ajax({
				url: 'index.php?route=tool/upload',
				type: 'post',
				dataType: 'json',
				data: new FormData($('#form-upload')[0]),
				cache: false,
				contentType: false,
				processData: false,
				beforeSend: function() {
					$(element).button('loading');
				},
				complete: function() {
					$(element).button('reset');
				},
				success: function(json) {
					$(element).parent().find('.ui-error').remove();
					
					if (json['error']) {
						$(element).parent().find('input').after('<span class="error ui-error">' + json['error'] + '</span>');
					}
					
					if (json['success']) {
						alert(json['success']);
						
						$(element).parent().find('input').val(json['code']);
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		}
	}, 500);
});

if ($('body').is('.bootstrap-5')) {
	$('.date').daterangepicker({
		singleDatePicker: true,
		autoApply: true,
		locale: {
			format: 'YYYY-MM-DD'
		}
	});
	$('.time').daterangepicker({
		singleDatePicker: true,
		datePicker: false,
		autoApply: true,
		timePicker: true,
		timePicker24Hour: true,
		locale: {
			format: 'HH:mm'
		}
	}).on('show.daterangepicker', function (ev, picker) {
		picker.container.find('.calendar-table').hide();
	});
	$('.datetime').daterangepicker({
		singleDatePicker: true,
		autoApply: true,
		timePicker: true,
		timePicker24Hour: true,
		locale: {
			format: 'YYYY-MM-DD HH:mm'
		}
	});
} else {
	$('.date').datetimepicker({
		language: '{{ datepicker }}',
		pickTime: false
	});
	$('.datetime').datetimepicker({
		language: '{{ datepicker }}',
		pickDate: true,
		pickTime: true
	});
	$('.time').datetimepicker({
		language: '{{ datepicker }}',
		pickDate: false
	});
}

$('select[name=\'country_id\']').on('change', function() {
	$.ajax({
		url: 'index.php?route=account/account/country&country_id=' + this.value,
		dataType: 'json',
		beforeSend: function() {
			$('select[name=\'country_id\']').prop('disabled', true);
		},
		complete: function() {
			$('select[name=\'country_id\']').prop('disabled', false);
		},
		success: function(json) {
			if (json['postcode_required'] == '1') {
				$('input[name=\'postcode\']').parent().parent().find('.ui-label').addClass('required');
			} else {
				$('input[name=\'postcode\']').parent().parent().find('.ui-label').removeClass('required');
			}
			
			html = '<option value="">{{ text_select }}</option>';
			
			if (json['zone'] && json['zone'] != '') {
				for (i = 0; i < json['zone'].length; i++) {
					html += '<option value="' + json['zone'][i]['zone_id'] + '"';
					
					if (json['zone'][i]['zone_id'] == '{{ zone_id }}') {
						html += ' selected="selected"';
					}
					
					html += '>' + json['zone'][i]['name'] + '</option>';
				}
			} else {
				html += '<option value="0" selected="selected">{{ text_none }}</option>';
			}
			
			$('select[name=\'zone_id\']').html(html);
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});

$('select[name=\'country_id\']').trigger('change');
</script> 

{{ header }} {% set col = column_left ? 9 : 12 %} {% set col = column_right ? col - 3 : col %}
<!-- Main :: Start-->
<main class="main">
	<!-- Breadcrumbs :: Start-->
	<div class="breadcrumbs">
	  <div class="container-fluid">
		<h1 class="breadcrumbs__title">{{ heading_title }}</h1>
		<ul class="breadcrumbs__menu">
		{% for i,breadcrumb in breadcrumbs %}
			{% if (i + 1 < breadcrumbs|length) %} 
			<li><a class="breadcrumbs__link" href="{{ breadcrumb.href }}"><span>{{ breadcrumb.text }}</span></a></li>
			{% else %} 
			<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
		</ul>
	  </div>
	</div>
	<!-- Breadcrumbs :: End-->
	<!-- Page :: Start-->
	<div class="page">
	{{ content_top }}
	<div class="container-fluid">
		<div class="row personal__wrapper">
		{{ column_left|replace({'<div id="column-left" class="col-xl-3">': '<div id="column-left" class="col-xl-3 personal__sidebar">'}) }}
		<div class="col-xl-{{ col }}">
			{% if recurrings %}
				<div class="table-responsive">
					<table class="ui-table">
					  <thead>
						<tr>
						  <th class="text-right">{{ column_order_recurring_id }}</th>
						  <th class="text-left">{{ column_product }}</th>
						  <th class="text-left">{{ column_status }}</th>
						  <th class="text-left">{{ column_date_added }}</th>
						  <th class="text-right"></th>
						</tr>
					  </thead>
					  <tbody>
					  
					  {% for recurring in recurrings %}
					  <tr>
						<td class="text-right">#{{ recurring.order_recurring_id }}</td>
						<td class="text-left">{{ recurring.product }}</td>
						<td class="text-left">{{ recurring.status }}</td>
						<td class="text-left">{{ recurring.date_added }}</td>
						<td class="text-right"><a href="{{ recurring.view }}" class="ui-link ui-link--blue ui-link--underline">{{ button_view }}</a></td>
					  </tr>
					  {% endfor %}
					  
					  </tbody>
					</table>
				</div>
				{% if pagination %}
				<div class="container-pagination">
					{{ pagination }}
				</div>
				{% endif %} 
			{% else %} 
			<div class="page__body">
				<p>{{ text_empty }}</p>
			</div>
			{% endif %}
			<div class="page__action">
				<a href="{{ continue }}" class="ui-btn ui-btn--primary">{{ button_continue }}</a>
			</div>
		</div>
		{{ column_right }}
		</div>
	</div>
	{{ content_bottom }}
	</div>
	<!-- Page :: End-->
</main>
<!-- Main :: End-->
{{ footer }}
</body></html>
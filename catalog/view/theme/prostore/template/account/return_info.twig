{{ header }} {% set col = column_left ? 9 : 12 %} {% set col = column_right ? col - 3 : col %}
<!-- Main :: Start-->
<main class="main">
	<!-- Breadcrumbs :: Start-->
	<div class="breadcrumbs">
	  <div class="container-fluid">
		<h1 class="breadcrumbs__title">{{ heading_title }}</h1>
		<ul class="breadcrumbs__menu">
		{% for i,breadcrumb in breadcrumbs %}
			{% if (i + 1 < breadcrumbs|length) %} 
			<li><a class="breadcrumbs__link" href="{{ breadcrumb.href }}"><span>{{ breadcrumb.text }}</span></a></li>
			{% else %} 
			<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
		</ul>
	  </div>
	</div>
	<!-- Breadcrumbs :: End-->
	<!-- Page :: Start-->
	<div class="page">
	{{ content_top }}
	<div class="container-fluid">
		<div class="row personal__wrapper">
		{{ column_left|replace({'<div id="column-left" class="col-xl-3">': '<div id="column-left" class="col-xl-3 personal__sidebar">'}) }}
		<div class="col-xl-{{ col }}">
			<div class="table-responsive">
				<table class="ui-table">
					<thead>
					  <tr>
						<th class="text-left" colspan="2">{{ text_return_detail }}</th>
					  </tr>
					</thead>
					<tbody>
					  <tr>
						<td class="text-left" style="width: 50%;"><b>{{ text_return_id }}</b> #{{ return_id }}<br />
						  <b>{{ text_date_added }}</b> {{ date_added }}</td>
						<td class="text-left" style="width: 50%;"><b>{{ text_order_id }}</b> #{{ order_id }}<br />
						  <b>{{ text_date_ordered }}</b> {{ date_ordered }}</td>
					  </tr>
					</tbody>
				</table>
			</div>
			<div class="ui-wysiwyg" >
				<h4>{{ text_product }}</h4>
			</div>
			<div class="table-responsive">
				<table class="ui-table">
				  <thead>
					<tr>
					  <th class="text-left" style="width: 33.3%;">{{ column_product }}</th>
					  <th class="text-left" style="width: 33.3%;">{{ column_model }}</th>
					  <th class="text-right" style="width: 33.3%;">{{ column_quantity }}</th>
					</tr>
				  </thead>
				  <tbody>
					<tr>
					  <td class="text-left">{{ product }}</td>
					  <td class="text-left">{{ model }}</td>
					  <td class="text-right">{{ quantity }}</td>
					</tr>
				  </tbody>
				</table>
			</div>
			<div class="ui-wysiwyg" >
				<h4>{{ text_reason }}</h4>
			</div>
			<div class="table-responsive">
				<table class="list ui-table">
				  <thead>
					<tr>
					  <th class="text-left" style="width: 33.3%;">{{ column_reason }}</th>
					  <th class="text-left" style="width: 33.3%;">{{ column_opened }}</th>
					  <th class="text-left" style="width: 33.3%;">{{ column_action }}</th>
					</tr>
				  </thead>
				  <tbody>
					<tr>
					  <td class="text-left">{{ reason }}</td>
					  <td class="text-left">{{ opened }}</td>
					  <td class="text-left">{{ action }}</td>
					</tr>
				  </tbody>
				</table>
			</div>
			{% if comment %}
			<div class="table-responsive">
				<table class="ui-table">
				  <thead>
					<tr>
					  <th class="text-left">{{ text_comment }}</th>
					</tr>
				  </thead>
				  <tbody>
					<tr>
					  <td class="text-left">{{ comment }}</td>
					</tr>
				  </tbody>
				</table>
			</div>
			{% endif %}
			{% if histories %}
			<div class="ui-wysiwyg" >
				<h4>{{ text_history }}</h4>
			</div>
			<div class="table-responsive">
				<table class="ui-table">
				  <thead>
					<tr>
					  <th class="text-left" style="width: 33.3%;">{{ column_date_added }}</th>
					  <th class="text-left" style="width: 33.3%;">{{ column_status }}</th>
					  <th class="text-left" style="width: 33.3%;">{{ column_comment }}</th>
					</tr>
				  </thead>
				  <tbody>
				  {% for history in histories %}
				  <tr>
					<td class="text-left">{{ history.date_added }}</td>
					<td class="text-left">{{ history.status }}</td>
					<td class="text-left">{{ history.comment }}</td>
				  </tr>
				  {% endfor %}
				  <tr>
					<td colspan="3" class="text-center">{{ text_no_results }}</td>
				  </tr>
				  </tbody>
				</table>
			</div>
			{% endif %}
			<div class="page__action">
				<a href="{{ continue }}" class="ui-btn ui-btn--primary">{{ button_continue }}</a>
			</div>
		</div>
		{{ column_right }}
		</div>
	</div>
	{{ content_bottom }}
	</div>
	<!-- Page :: End-->
</main>
<!-- Main :: End-->
{{ footer }}
</body></html>
{{ header }} {% set col = column_left ? 9 : 12 %} {% set col = column_right ? col - 3 : col %}

<!-- Main :: Start-->
<main class="main">
	<!-- Breadcrumbs :: Start-->
	<div class="breadcrumbs">
	  <div class="container-fluid">
		<h1 class="breadcrumbs__title">{{ heading_title }}</h1>
		<ul class="breadcrumbs__menu">
		{% for i,breadcrumb in breadcrumbs %}
			{% if (i + 1 < breadcrumbs|length) %} 
			<li><a class="breadcrumbs__link" href="{{ breadcrumb.href }}"><span>{{ breadcrumb.text }}</span></a></li>
			{% else %} 
			<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
		</ul>
	  </div>
	</div>
	<!-- Breadcrumbs :: End-->
	
	<!-- Page :: Start-->
	<div class="page">
	{{ content_top }}
	<div class="container-fluid">
		<div class="row personal__wrapper">
		{{ column_left|replace({'<div id="column-left" class="col-xl-3">': '<div id="column-left" class="col-xl-3 personal__sidebar">'}) }}
		<div class="col-xl-{{ col }}">
			<div class="auth__body">
				<div class="auth__form">
					<form action="{{ action }}" method="post" enctype="multipart/form-data">
						<fieldset class="ui-fieldset">
							<legend class="ui-legend">{{ text_your_password }}</legend>
							<div class="form-group">
								<label class="ui-label required" for="input-password">{{ entry_password }}</label>
								<div class="ui-field{% if error_password %} is-error{% endif %}">
									<input class="ui-input" type="password" name="password" placeholder="{{ entry_password }}" value="{{ password }}" id="input-password">
									{% if error_password %}
									<span class="error ui-error">{{ error_password }}</span>
									{% endif %} 
								</div>
							</div>	
							<div class="form-group">
								<label class="ui-label required" for="input-confirm">{{ entry_confirm }}</label>
								<div class="ui-field{% if error_confirm %} is-error{% endif %}">
									<input class="ui-input" type="password" name="confirm" placeholder="{{ entry_confirm }}" value="{{ confirm }}" id="input-confirm">
									{% if error_confirm %}
									<span class="error ui-error">{{ error_confirm }}</span>
									{% endif %} 
								</div>
							</div>
						</fieldset>
						<fieldset class="ui-fieldset">
							<div class="row">
								<div class="col-auto">
								   <a href="{{ back }}" class="ui-btn ui-btn--grey">{{ button_back }}</a>
								</div>
								<div class="col-auto">
									<button type="submit" class="ui-btn ui-btn--primary">{{ button_continue }}</button>	
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
		{{ column_right }}
		</div>
	</div>
	{{ content_bottom }}
	</div>
	<!-- Page :: End-->
</main>
<!-- Main :: End-->

{{ footer }}
</body></html>
{{ header }} {% set col = column_left ? 9 : 12 %} {% set col = column_right ? col - 3 : col %}
<!-- Main :: Start-->
<main class="main">
	<!-- Breadcrumbs :: Start-->
	<div class="breadcrumbs">
	  <div class="container-fluid">
		<h1 class="breadcrumbs__title">{{ heading_title }}</h1>
		<ul class="breadcrumbs__menu">
		{% for i,breadcrumb in breadcrumbs %}
			{% if (i + 1 < breadcrumbs|length) %} 
			<li><a class="breadcrumbs__link" href="{{ breadcrumb.href }}"><span>{{ breadcrumb.text }}</span></a></li>
			{% else %} 
			<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
		</ul>
	  </div>
	</div>
	<!-- Breadcrumbs :: End-->
	
	<!-- Page :: Start-->
	<div class="page">
	{{ content_top }}
	<div class="container-fluid">
		<div class="row personal__wrapper">
		{{ column_left|replace({'<div id="column-left" class="col-xl-3">': '<div id="column-left" class="col-xl-3 personal__sidebar">'}) }}
		<div class="col-xl-{{ col }}">
			{% if addresses %}
			<div class="page__body page__body--addresses">
				<div class="row">
					{% for i,result in addresses %}
					<div class="col-xl-6">
						<div class="personal__card">
							<div class="personal__card-head">
								<div class="row">
									<div class="col-auto">
										<span class="h3 personal__card-title">{{ text_prostore_address_1 }} #{{ i+1 }}</span>
									</div>
								</div>
							</div>
							<div class="personal__card-body">
								<p>{{ result.address }}</p>
							</div>
							<div class="personal__card-foot">
								<div class="row">
									<div class="col">
									   <a class="ui-btn ui-btn--red" href="{{ result.delete }}">{{ button_delete }}</a>
									</div>
									<div class="col-auto">
										<a class="ui-btn ui-btn--primary" href="{{ result.update }}">{{ button_edit }}<svg class="icon-arrow-right"><use xlink:href="catalog/view/theme/prostore/sprites/sprite.svg#icon-arrow-right"></use></svg></a>
									</div>
								</div>
								
							</div>
						</div>
					</div>
					{% endfor %} 
				</div>
			</div>
			{% else %} 
			<div class="page__body">
				<p>{{ text_empty }}</p>
			</div>
			{% endif %} 
			<div class="page__action">
				<div class="row">
					<div class="col-auto">
					   <a href="{{ back }}" class="ui-btn ui-btn--transparent-dark">{{ button_back }}</a>
					</div>
					<div class="col-auto">
						<a href="{{ add }}" class="ui-btn ui-btn--primary">{{ button_new_address }}</a>
					</div>
				</div>
			</div>
		</div>
		{{ column_right }}
		</div>
	</div>
	{{ content_bottom }}
	</div>
	<!-- Page :: End-->
</main>
<!-- Main :: End-->
{{ footer }}
</body></html>
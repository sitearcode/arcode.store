{{ header }} {% set col = column_left ? 9 : 12 %} {% set col = column_right ? col - 3 : col %}

<!-- Main :: Start-->
<main class="main">
	<!-- Breadcrumbs :: Start-->
	<div class="breadcrumbs">
	  <div class="container-fluid">
		<h1 class="breadcrumbs__title">{{ heading_title }}</h1>
		<ul class="breadcrumbs__menu">
		{% for i,breadcrumb in breadcrumbs %}
			{% if (i + 1 < breadcrumbs|length) %} 
			<li><a class="breadcrumbs__link" href="{{ breadcrumb.href }}"><span>{{ breadcrumb.text }}</span></a></li>
			{% else %} 
			<li>{{ breadcrumb.text }}</li>
			{% endif %}
		{% endfor %}
		</ul>
	  </div>
	</div>
	<!-- Breadcrumbs :: End-->
	<!-- Page :: Start-->
	<div class="page">
	{{ content_top }}
	<div class="container-fluid">
		<div class="row personal__wrapper">
		{{ column_left|replace({'<div id="column-left" class="col-xl-3">': '<div id="column-left" class="col-xl-3 personal__sidebar">'}) }}
		<div class="col-xl-{{ col }}">
			<div class="auth__body">
				<div class="auth__form">
					<form action="{{ action }}" method="post" enctype="multipart/form-data">
						<fieldset class="ui-fieldset">
							<legend class="ui-legend">{{ text_newsletter }}</legend>
							<div class="form-group">
								<label class="ui-label">{{ entry_newsletter }}</label>
								<div class="row">
									{% if newsletter %}
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="newsletter" type="radio" value="1" checked="checked">
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ text_yes }}</span>
										</label>
									</div>
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="newsletter" type="radio" value="0">
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ text_no }}</span>
										</label>
									</div>
									{% else %}
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="newsletter" type="radio" value="1">
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ text_yes }}</span>
										</label>
									</div>
									<div class="col-auto">
										<label class="ui-check">
											<input class="ui-check__input" name="newsletter" type="radio" value="0" checked="checked">
											<span class="ui-check__radio"></span>
											<span class="ui-check__text">{{ text_no }}</span>
										</label>
									</div>
									{% endif %}
								</div>
							</div>
						</fieldset>
						<fieldset class="ui-fieldset">
							<div class="row">
								<div class="col-auto">
								   <a href="{{ back }}" class="ui-btn ui-btn--grey">{{ button_back }}</a>
								</div>
								<div class="col-auto">
									<button type="submit" class="ui-btn ui-btn--primary">{{ button_continue }}</button>	
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
		{{ column_right }}
		</div>
	</div>
	{{ content_bottom }}
	</div>
	<!-- Page :: End-->
</main>
<!-- Main :: End-->

{{ footer }}
</body></html>
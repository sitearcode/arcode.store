	<!-- Categories :: Start-->

<div class="categories">
	<div class="container-fluid">
		<div class="row">
			{% for i,banner1 in banners %}
			{% for banner in banner1 %}
				<div class="co-12 col-md-6">
					<a href="{{ banner.link }}" class="c__item">
						<span class="c__item-title">{{ banner.title }}</span>

						<img class="c-item__img" src="{{ banner.image }}" alt="{{ category.name }}" {% if lazyload %}loading="lazy"{% endif %}>

						<svg class="c-item__arrow" width="13" height="18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="m4 4 5 5-5 5" stroke="#000" stroke-linecap="round"/></svg><span class="c__item-more">{{text_more}}</span>
					</a>
				</div>
			{% endfor %}
			{% endfor %}
		</div>

	</div>
</div>

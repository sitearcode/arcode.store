{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-slideshow" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-slideshow" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if (error_name) %} 
              <div class="text-danger">{{ error_name }}</div>
              {% endif %} 
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-width"><span data-toggle="tooltip" title="Картинка - изображения в формате png, jpg, gif. При выборе HTML кода в качестве иконки можно использовать векторную графику svg или иконки fontawesome">Тип иконок</span></label>
            <div class="col-sm-10">
				<select name="icon_type" class="form-control">
				  <option value="img" {{ icon_type == 'img' ? 'selected="selected"' : '' }}>Картинка</option>
				  <option value="html" {{ icon_type == 'html' ? 'selected="selected"' : '' }}>HTML код</option>            
				</select>
            </div>
          </div>
<div class="typeimg seltype" style="display:{% if icon_type == 'img' %}block{% else %}none{% endif %}">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-width">{{ entry_width }}</label>
            <div class="col-sm-10">
              <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
              {% if (error_width) %} 
              <div class="text-danger">{{ error_width }}</div>
              {% endif %} 
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-height">{{ entry_height }}</label>
            <div class="col-sm-10">
              <input type="text" name="height" value="{{ height }}" placeholder="{{ entry_height }}" id="input-height" class="form-control" />
              {% if (error_height) %} 
              <div class="text-danger">{{ error_height }}</div>
              {% endif %} 
            </div>
          </div>
</div>
	  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-width"><span data-toggle="tooltip" title="Сколько элементов выводить в одной строке">Шаблон вывода</span></label>
            <div class="col-sm-10">
				<select name="grid" class="form-control">
				  <option value="4" {{ grid == '4' ? 'selected="selected"' : '' }}>Сетка по 3 в строку</option>
				  <option value="3" {{ grid == '3' ? 'selected="selected"' : '' }}>Сетка по 4 в строку</option>            
				  <option value="2" {{ grid == '2' ? 'selected="selected"' : '' }}>Сетка по 6 в строку</option>            
				  <option value="auto" {{ grid == 'auto' ? 'selected="selected"' : '' }}>Сетка с автоматической шириной</option>            
				  <option value="slide" {{ grid == 'slide' ? 'selected="selected"' : '' }}>Слайдер</option>            
				</select>
            </div>
	  </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="input-title">Заголовок модуля</label>
          <div class="col-sm-10">
            {% for language in languages %} 
            <div class="input-group"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></span> {% set fieldName = "title" ~ language['language_id'] %} 
            <input type="text" name="title{{ language['language_id'] }}" value="{{ attribute(titles, fieldName)  is defined  ? attribute(titles, fieldName)  : '' }}" placeholder="Заголовок модуля" id="input-title{{ language['language_id'] }}" class="form-control" />
            </div>
            {% endfor %} 
          </div>    
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
        <div class="col-sm-2">
          <div class="btn-group on-off" data-toggle="buttons">
            <label class="btn btn-default btn-on {{ status == '1' ? 'active' : '' }}">
              <input value="1" type="radio" name="status" id="status-1" autocomplete="off" {{ status == '1' ? 'checked' : '' }}>Вкл.
            </label>
            <label class="btn btn-default btn-off {{ status == '0' ? 'active' : '' }}">
              <input value="0" type="radio" name="status" id="status-0" autocomplete="off" {{ status == '' ? 'checked' : '' }}>Откл.
            </label>
          </div>
        </div>          
      </div>  
    <div class="form-group">
    <div class="col-sm-12">
          <ul class="nav nav-tabs" id="language">
            {% for language in languages %} 
            <li><a href="#language{{ language['language_id'] }}" data-toggle="tab"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> {{ language['name'] }}</a></li>
            {% endfor %} 
          </ul>   
    <div class="tab-content">
        {% set prostore_advantages_row = 0 %} 
            {% for language in languages %} 
            <div class="tab-pane" id="language{{ language['language_id'] }}">
              <table id="images{{ language['language_id'] }}" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <td class="text-center">Изображение</td>
                    <td class="text-left">Заголовок (title, alt)</td>

                    <td class="text-left">Ссылка</td>

                    <td class="text-left">Сортировка</td>
                    <td></td>
                  </tr>
                </thead>
               <tbody>
        {% set prostore_advantages_row = 0 %} 
                  {% if (advantages_images is defined) %} 
                  {% for advantages_image in advantages_images %} 
                  <tr id="image-row{{ prostore_advantages_row }}">
                     <td class="text-center">
                      <textarea name="advantages_image[{{ prostore_advantages_row }}][language][{{ language['language_id'] }}][html]" class="form-control typehtml seltype" style="display:{% if icon_type == 'html' %}block{% else %}none{% endif %}" placeholder="HTML код" rows="4">{{ advantages_image['language'][language['language_id']] is defined ? advantages_image['language'][language['language_id']]['html'] : '' }}</textarea>
                      <a href="" id="thumb-image-{{ prostore_advantages_row }}-{{ language['language_id'] }}" data-toggle="image" style="display:{% if icon_type == 'img' %}block{% else %}none{% endif %}" class="img-thumbnail typeimg seltype"><img src="{{ advantages_image['language'][language['language_id']]['thumb'] }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                      <input type="hidden" name="advantages_image[{{ prostore_advantages_row }}][language][{{ language['language_id'] }}][image]" value="{{ advantages_image['language'][language['language_id']]['image'] }}" id="input-image{{ prostore_advantages_row }}-{{ language['language_id'] }}" /></td>
           
          <td class="text-left"><input type="text" name="advantages_image[{{ prostore_advantages_row }}][language][{{ language['language_id'] }}][title]" value="{{ advantages_image['language'][language['language_id']] is defined ? advantages_image['language'][language['language_id']]['title'] : '' }}" placeholder="Заголовок" class="form-control" />
                     </td>

           <td class="text-left"><input type="text" name="advantages_image[{{ prostore_advantages_row }}][language][{{ language['language_id'] }}][link]" value="{{ advantages_image['language'][language['language_id']]['link'] is defined ? advantages_image['language'][language['language_id']]['link'] : '' }}" placeholder="Ссылка" class="form-control" /></td>
           
           <td class="text-right" style="width: 10%;"><input type="text" name="advantages_image[{{ prostore_advantages_row }}][language][{{ language['language_id'] }}][sort_order]" value="{{ advantages_image['language'][language['language_id']]['sort_order'] is defined ? advantages_image['language'][language['language_id']]['sort_order'] : '' }}" placeholder="Сортировка" class="form-control" /></td>
          
                    <td class="text-left"><button type="button" onclick="$('#image-row{{ prostore_advantages_row }}, .tooltip').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                  </tr>
                    {% set prostore_advantages_row = prostore_advantages_row + 1 %}
                  {% endfor %} 
                  {% endif %} 
                </tbody>

                <tfoot>
                  <tr>
                    <td colspan="4"></td>
                    <td class="text-left"><button type="button" onclick="addImage('{{ language['language_id'] }}');" data-toggle="tooltip" title="Добавить" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                  </tr>
                </tfoot>
              </table>
            </div>
            {% endfor %} 
      </div>
    </div>  
    </div>  
        </form>
      </div>
    </div>
  </div>
</div>
  <script type="text/javascript"><!--
$('#language a:first').tab('show');

var prostore_advantages_row = {{ prostore_advantages_row +1 }};

function addImage(language_id) {
  var type = $('select[name=\'icon_type\']').val();
  var htmlstyle,imagestyle = '';
  if (type == 'html') {
      imagestyle = 'style="display: none;"';
  }else{
      htmlstyle = 'style="display: none;"';
  }

  {% for language in languages %} 
  language_id = {{ language['language_id'] }};
  html  = '<tr id="image-row' + prostore_advantages_row + '">';
  html += '  <td class="text-center"><textarea name="advantages_image[' + prostore_advantages_row + '][language][' + language_id + '][html]" class="form-control typehtml seltype" placeholder="HTML код" rows="4" '+htmlstyle+' ></textarea><a href="" id="thumb-image' + prostore_advantages_row + '" data-toggle="image" class="img-thumbnail typeimg seltype" '+imagestyle+' ><img src="{{ placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>';

  html += '<input type="hidden" name="advantages_image[' + prostore_advantages_row + '][language][' + language_id + '][image]" value="" id="input-image' + prostore_advantages_row + '" /></td>'; 
    html += '  <td class="text-left"><input type="text" name="advantages_image[' + prostore_advantages_row + '][language][' + language_id + '][title]" value="" placeholder="Заголовок" class="form-control" /></td>'; 
  
  html += '  <td class="text-left"><input type="text" name="advantages_image[' + prostore_advantages_row + '][language][' + language_id + '][link]" value="" placeholder="Ссылка" class="form-control" /></td>'; 

  
  html += '  <td class="text-right" style="width: 10%;"><input type="text" name="advantages_image[' + prostore_advantages_row + '][language][' + language_id + '][sort_order]" value="" placeholder="Сортировка" class="form-control" /></td>';

  html += '  <td class="text-left"><button type="button" onclick="$(\'#image-row' + prostore_advantages_row  + ', .tooltip\').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
  html += '</tr>';
  
  $('#images' + language_id + ' tbody').append(html);
  {% endfor %}  
  prostore_advantages_row++;
}

$('select[name=\'icon_type\']').on('change', function() {  
  var sel = $(this).val();
  $('.seltype').hide();
  $('.type'+sel).show();
});
//--></script>  
{{ footer }}
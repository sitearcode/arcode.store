{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-featured" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-featured" class="form-horizontal">
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
				<div class="col-sm-10">
				  <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
				  {% if (error_name) %} 
				  <div class="text-danger">{{ error_name }}</div>
				  {% endif %} 
				</div>
			</div>        		
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
				<div class="col-sm-2">
					<div class="btn-group on-off" data-toggle="buttons">
						<label class="btn btn-default btn-on {{ status == 1 ? 'active' : '' }}">
							<input value="1" type="radio" name="status" id="status-1" autocomplete="off" {{ status == 1 ? 'checked' : '' }}>Вкл.
						</label>
						<label class="btn btn-default btn-off {{ status == 0 ? 'active' : '' }}">
							<input value="0" type="radio" name="status" id="status-0" autocomplete="off" {{ status == 0 ? 'checked' : '' }}>Откл.
						</label>
					</div>
				</div>	
				
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Шаблон вывода</label>
				<div class="col-sm-2">
					<select name="view" class="form-control">
							<option value="tab_grid" {{ view == 'tab_grid' ? 'selected="selected"' : '' }}>Табы сеткой</option>
							<option value="tab_slide" {{ view == 'tab_slide' ? 'selected="selected"' : '' }}>Табы слайдером</option>
							<option value="slide" {{ view == 'slide' ? 'selected="selected"' : '' }}>Слайдер</option>
							<option value="grid" {{ view == 'grid' ? 'selected="selected"' : '' }}>Сетка</option>
					</select>
				</div>
			</div>
			
			<div class="form-group cell-lim" style="display:none">
				<label class="col-sm-2 control-label">Товаров в строке</label>
				<div class="col-sm-2">
					<select name="tp_limit" class="form-control">
							<option value="3" {{ tp_limit == 3 ? 'selected="selected"' : '' }}>3</option>
							<option value="4" {{ tp_limit == 4 ? 'selected="selected"' : '' }}>4</option>
							<option value="5" {{ tp_limit == 5 ? 'selected="selected"' : '' }}>5</option>
							<option value="6" {{ tp_limit == 6 ? 'selected="selected"' : '' }}>6</option> 
					</select>
				</div>
			</div>
			<div class="form-group cell-lim" style="display:none">
				<label class="col-sm-2 control-label" for="input-show_more"><span data-toggle="tooltip" title='Кнопка "Показать больше" отображается если лимит товаров из таблицы ниже больше чем товаров в строке' data-original-title='Кнопка "Показать больше" отображается если лимит товаров из таблицы ниже больше чем товаров в строке'>Показать больше</span></label>
				<div class="col-sm-2">
					<div class="btn-group on-off" data-toggle="buttons">
						<label class="btn btn-default btn-on {{ show_more == 1 ? 'active' : '' }}">
							<input value="1" type="radio" name="show_more" id="show_more-1" autocomplete="off" {{ show_more == 1 ? 'checked' : '' }}>Вкл.
						</label>
						<label class="btn btn-default btn-off {{ show_more == 0 ? 'active' : '' }}">
							<input value="0" type="radio" name="show_more" id="show_more-0" autocomplete="off" {{ show_more == 0 ? 'checked' : '' }}>Откл.
						</label>
					</div>
				</div>	
			</div>
			<div class="form-group cell-title" style="display:none">
			<label class="col-sm-2 control-label" for="input-title">Заголовок модуля</label>
			  <div class="col-sm-10">
				{% for language in languages %} 
				<div class="input-group"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></span> {% set fieldName = "title" ~ language['language_id'] %} 
				<input type="text" name="title{{ language['language_id'] }}" value="{{ attribute(titles, fieldName)  is defined  ? attribute(titles, fieldName)  : '' }}" placeholder="Заголовок модуля" id="input-title{{ language['language_id'] }}" class="form-control" />
				</div>
				{% endfor %} 
			  </div>    
		    </div>
		  
			<div class="form-group">
				<label class="col-sm-2 control-label"><span data-toggle="tooltip" title="Вывод дополнительных изображений товара" data-original-title="Вывод дополнительных изображений товара">Доп. изображения</span></label>
				<div class="col-sm-2">
					<div class="btn-group on-off" data-toggle="buttons">
						<label class="btn btn-default btn-on {{ images_status == 1 ? 'active' : '' }}">
							<input value="1" type="radio" name="images_status" id="images_status-1" autocomplete="off" {{ images_status == 1 ? 'checked' : '' }}>Вкл.
						</label>
						<label class="btn btn-default btn-off {{ images_status == 0 ? 'active' : '' }}">
							<input value="0" type="radio" name="images_status" id="images_status-0" autocomplete="off" {{ images_status == 0 ? 'checked' : '' }}>Откл.
						</label>
					</div>
				</div>	
			</div>	
	
			<div class="table">
				<table id="prostore_product_tabs" class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
					  <td class="text-left">Название блока товаров</td>
					  <td class="text-left">Источник товаров</td>
					  <td class="text-left">Сортировка товаров</td>
					  <td class="text-left">Лимит товаров</td>
					  <td class="text-left">Порядок сортировки</td>
					  <td></td>
					</tr>
				</thead>
				<tbody>
				{% set prostore_product_tabs_row = 0 %} 
				{% for prostore_product_tabs_row,product_tab in theme_prostore_product_tabs %} 
					<tr id="prostore_product_tabs-row{{ prostore_product_tabs_row }}">
					<td class="text-left">
                			    {% for language in languages %} 
						<div class="input-group"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="Russian"></span>
							<input type="text" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][description][{{ language['language_id'] }}][name]" value="{{ theme_prostore_product_tabs[prostore_product_tabs_row]['description'][language['language_id']] is defined ? theme_prostore_product_tabs[prostore_product_tabs_row]['description'][language['language_id']]['name'] : '' }}" placeholder="Название" class="form-control">
						</div>
                			    {% endfor %} 
					</td>
					<td class="text-left">
						<select id="target-{{ prostore_product_tabs_row }}-0" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][target]" class="form-control master-select-target" for="{{ prostore_product_tabs_row }}">
						{% for key,target in theme_prostore_product_tabs_targets %} 
						  {% if (key == theme_prostore_product_tabs[prostore_product_tabs_row]['target']) %} 
							<option value="{{ key }}" selected="selected">{{ target }}</option>
						  {% else %} 
							<option value="{{ key }}">{{ target }}</option>
						   {% endif %} 
						{% endfor %} 
						</select>
						<div id="select-target-{{ prostore_product_tabs_row }}-1" {% if (product_tab['target'] != '1') %}style="display:none;"{% endif %} class="well-table select-target-{{ prostore_product_tabs_row }}">			
						  <input type="text" name="product_name" value="" placeholder="{{ entry_product }}" for="{{ prostore_product_tabs_row }}" id="input-product" class="form-control" />
						  <div id="featured-product-{{ prostore_product_tabs_row }}-1" class="well well-sm">
							{% for product in products[prostore_product_tabs_row] %} 
							<div id="featured-product-{{ prostore_product_tabs_row }}-{{ product['product_id'] }}"><i class="fa fa-minus-circle"></i> {{ product['name'] }} 
							  <input type="hidden" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][products][]" value="{{ product['product_id'] }}" />
							</div>
							{% endfor %} 
						  </div>						
						</div>	
						<div id="select-target-{{ prostore_product_tabs_row }}-2"  {% if (product_tab['target'] != '2') %}style="display:none;"{% endif %} class="well-table select-target-{{ prostore_product_tabs_row }}">			
						  <input type="text" name="category_name" value="" placeholder="{{ entry_category }}" for="{{ prostore_product_tabs_row }}" id="input-category" class="form-control" />
						  <div id="featured-category-{{ prostore_product_tabs_row }}-2" class="well well-sm">
						  	{% if (categories[prostore_product_tabs_row] is defined) %} 
								{% for category in categories[prostore_product_tabs_row] %} 
								<div id="featured-category-{{ prostore_product_tabs_row }}-{{ category['category_id'] }}"><i class="fa fa-minus-circle"></i> {{ category['name'] }} 
								  <input type="hidden" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][categories][]" value="{{ category['category_id'] }}" />
								</div>
								{% endfor %} 
							{% endif %} 
						  </div>						
						</div>							
					</td>
					<td class="text-left">
						<select id="sortorder" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][sortorder]" class="form-control">
						{% for key,sortOrder in sorts %} 
							{% if (key == theme_prostore_product_tabs[prostore_product_tabs_row]['sortorder']) %} 
								<option value="{{ key }}" selected="selected">{{ sortOrder }}</option>
							{% else %} 
								<option value="{{ key }}" >{{ sortOrder }}</option>
							{% endif %} 
						{% endfor %} 
						</select>
					</td>
					<td class="text-left"><input type="text" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][limit]" value="{{ theme_prostore_product_tabs[prostore_product_tabs_row]['limit'] }}" placeholder="Лимит товаров" class="form-control"></td>
					<td class="text-left"><input type="text" name="theme_prostore_product_tabs[{{ prostore_product_tabs_row }}][sort]" value="{{ theme_prostore_product_tabs[prostore_product_tabs_row]['sort'] }}" placeholder="Сортировка" class="form-control"></td>
					<td class="text-right"><button type="button" onclick="$('#prostore_product_tabs-row{{ prostore_product_tabs_row }}').remove();" data-toggle="tooltip" title="" class="btn btn-danger" data-original-title="Удалить"><i class="fa fa-minus-circle"></i></button></td>
					</tr>

				{% endfor %} 
				</tbody>
				  <tfoot>
					<tr>
					  <td colspan="5"></td>
					  <td class="text-right">
					  <button type="button" onclick="addLinks();" data-toggle="tooltip" title="" class="btn addlinks btn-primary" data-original-title="Добавить ссылку"><i class="fa fa-plus-circle"></i></button>
					</td>
					</tr>
				  </tfoot>
				</table>
			  </div>
        </form>
      </div>
    </div>
  </div>
